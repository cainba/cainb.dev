{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": "./src",
        "outDir": "./dist",
        "declaration": true,
        "declarationMap": true,
        "emitDeclarationOnly": false,
        "composite": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "paths": {
            "@web/*": [
                "./*"
            ]
        }
    },
    "include": [
        "./src/**/*",
        "./src/config/*",
        "./types/**/*"
    ]
}